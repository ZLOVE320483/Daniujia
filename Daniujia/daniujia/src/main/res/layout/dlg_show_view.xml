<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/share_wechat_moments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_friendcircle"
            android:text="微信朋友圈"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:textColor="@color/first_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/share_wechat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_wechat"
            android:text="微信好友"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:textColor="@color/first_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/share_qq"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_qq"
            android:text="QQ"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:textColor="@color/first_text_color"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/share_sina_weibo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/share_web"
            android:text="新浪微博"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:textColor="@color/first_text_color"
            android:textSize="12sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/separate"
        android:layout_marginTop="28dp"/>

    <TextView
        android:id="@+id/share_cancel"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:text="取  消"
        android:gravity="center"
        android:textColor="@color/blue_text"
        android:textSize="17sp" />

</LinearLayout>