<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:src="@drawable/pwd_icon" />

        <com.xiaojia.daniujia.ui.views.FlowLayout
            android:id="@+id/industry_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/icon"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/expert_direction_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/industry_container"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="创业|战略模式"
                android:textColor="@color/first_text_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/next_level" />

            <TextView
                android:id="@+id/subName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/first_text_color"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expert_direction_container"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关行业:"
                android:textColor="@color/second_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/relative_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="互联网"
                android:textColor="@color/second_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/id_divider_1"
            android:layout_width="25dp"
            android:layout_height="1dp"
            android:layout_below="@+id/ll_relative"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="26dp"
            android:src="@color/common_line_color"/>

        <TextView
            android:id="@+id/workAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp"
            android:textColor="@color/third_text_color"
            android:layout_below="@+id/id_divider_1"
            android:text="12年经验"/>
    </RelativeLayout>

</RelativeLayout>