<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/shape_rect_white_bg">

        <LinearLayout
            android:id="@+id/industry_container"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pwd_icon" />

            <TextView
                android:id="@+id/mainName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="创业|战略模式"
                android:textColor="@color/first_text_color"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:src="@drawable/next_level" />

            <TextView
                android:id="@+id/subName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:textColor="@color/first_text_color"
                android:textSize="15sp"
                android:text="创业咨询" />
        </LinearLayout>

        <View
            android:id="@+id/separate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_below="@+id/industry_container"
            android:layout_marginLeft="37dp"
            android:background="@color/separate" />

        <LinearLayout
            android:id="@+id/ll_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separate"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相关行业:"
                android:textColor="@color/second_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/relative_industry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="互联网"
                android:textColor="@color/first_text_color"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_relative"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="具体方向:"
                android:textColor="@color/second_text_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detail_relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投资方寻找"
                android:textColor="@color/first_text_color"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/workAge"
        android:layout_width="36dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:background="#fb8c00"
        android:gravity="center"
        android:text="5年"
        android:textColor="@color/white"
        android:textSize="12sp" />
</RelativeLayout>