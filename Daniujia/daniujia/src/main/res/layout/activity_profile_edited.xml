<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_content_bg"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/common_top_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/common_line_color" />

    <EditText
        android:id="@+id/account_profile"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_rect_round_white_bg"
        android:gravity="start"
        android:hint="@string/account_profile_new"
        android:lineSpacingExtra="2dp"
        android:paddingLeft="12dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/first_text_color"
        android:textColorHint="@color/third_text_color"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/id_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:text="@string/reference_example"
        android:textColor="@color/blue_text"
        android:textSize="12sp" />
</LinearLayout>