<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="45dp"
    android:background="@color/common_top_bar_bg">

    <ImageView
        android:id="@+id/id_back"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/bg_title_back"
        android:scaleType="center"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/first_text_color"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/title_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:padding="10dp"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:text="下一步"
        android:textColor="@color/blue_text" />

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:visibility="gone"
        android:src="@drawable/document_more"/>

    <ImageView
        android:id="@+id/id_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_share_grey"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:padding="10dp"/>
</RelativeLayout>