<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:gesture-image="http://schemas.polites.com/android"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xiaojia.daniujia.ui.views.imageview.GestureImageView.GestureImageView
        android:id="@+id/gesture_image"
        gesture-image:min-scale="0.5"
        gesture-image:max-scale="10.0"
        gesture-image:start-scale="2.0"
        gesture-image:start-x="1000"
        gesture-image:start-y="0"
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>