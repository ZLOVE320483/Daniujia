<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingRight="12dp">

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent">

            <com.xiaojia.daniujia.ui.views.imageview.RoundedImageView
                android:id="@+id/id_avatar"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_avatar_default"
                app:riv_oval="true"/>

            <TextView
                android:id="@+id/id_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_avatar"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="6dp"
                android:text="@string/app_name"
                android:textColor="@color/second_text_color"
                android:textSize="12sp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/sign_up_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已报名"
            android:textColor="@color/first_text_color"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/browser_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sign_up_tip"
            android:layout_marginTop="6dp"
            android:text="发布者查看主页：5次"
            android:textColor="@color/third_text_color"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>