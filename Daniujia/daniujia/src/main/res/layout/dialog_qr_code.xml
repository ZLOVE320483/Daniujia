<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <RelativeLayout
        android:id="@+id/dialog_qr_code_rl_frame"
        android:layout_width="280dp"
        android:layout_height="322dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@drawable/shape_common_grey_border">

    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_qr_code_tv_long_click_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_qr_code_rl_frame"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="@string/long_click_message"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/avatar_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <com.xiaojia.daniujia.ui.views.imageview.RoundedImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_centerInParent="true"
            android:src="@color/white"
            app:riv_oval="true" />

        <com.xiaojia.daniujia.ui.views.imageview.RoundedImageView
            android:id="@+id/dialog_qr_code_ri_user_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_avatar_default"
            app:riv_oval="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dialog_qr_code_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/first_text_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/dialog_qr_code_iv_qr_picture"
        android:layout_width="185dp"
        android:layout_height="185dp"
        android:layout_below="@id/dialog_qr_code_tv_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:padding="3dp"
        android:background="@drawable/qr_code_frame"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_qr_code_iv_qr_picture"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="@string/qr_code_text"
        android:textColor="@color/second_text_color"
        android:textSize="15sp" />

</RelativeLayout>