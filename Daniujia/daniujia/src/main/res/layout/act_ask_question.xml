<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/common_content_bg"
              android:orientation="vertical">

    <include layout="@layout/layout_common_title_bar" />

    <include layout="@layout/common_line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/id_user_request"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_rect_top_round_white_bg"
                android:gravity="top"
                android:hint="描述与您工作或者公司运营中遇到的任何问题，我们将有专人与您联系。"
                android:paddingBottom="15dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="15dp"
                android:textColorHint="@color/third_text_color"
                android:textSize="15sp"/>

            <EditText
                android:id="@+id/id_user_phone"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_rect_top_round_white_bg"
                android:hint="手机号|QQ号|微信号|邮箱均可"
                android:inputType="phone"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:textColorHint="@color/third_text_color"
                android:visibility="gone"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/shape_rect_blue"
                android:text="提  交"
                android:textColor="@color/white"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>