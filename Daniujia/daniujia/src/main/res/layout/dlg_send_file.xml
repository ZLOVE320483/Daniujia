<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect_white_bg">

        <TextView
            android:id="@+id/dlg_knowledge_tip_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="发送给:"
            android:textColor="@color/first_text_color"
            android:textSize="17sp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.xiaojia.daniujia.ui.views.imageview.RoundedImageView
                android:id="@+id/dlg_send_file_head"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:scaleType="centerInside"
                app:riv_oval="true" />

            <TextView
                android:id="@+id/dlg_send_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:textColor="#222222"
                />

        </LinearLayout>

        <View
            android:background="@color/separate"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_height="@dimen/list_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[文件]"
                android:textSize="15sp"
                android:textColor="@color/first_text_color" />

            <TextView
                android:id="@+id/dlg_file_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="15sp"
                android:layout_marginLeft="12dp"
                android:textColor="@color/first_text_color" />

        </LinearLayout>

        <EditText
            android:id="@+id/dlg_send_file_leave_word"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="10dp"
            android:hint="给约谈对象留言"
            android:textColor="@color/first_text_color"
            android:textColorHint="@color/third_text_color"
            android:paddingLeft="10dp"
            android:textSize="14sp"
            android:background="@drawable/send_person_search_bg"/>

        <View
            android:background="@color/separate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dlg_send_file_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/third_text_color"
                android:text="取  消"/>

            <View
                android:background="@color/separate"
                android:layout_width="@dimen/list_divider"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/dlg_send_file_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/blue_text"
                android:text="确  认"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>