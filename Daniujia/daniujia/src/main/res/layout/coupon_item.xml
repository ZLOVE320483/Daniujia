<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/coupon_bg_valid"
    android:layout_marginLeft="18dp"
    android:layout_marginRight="18dp"
    android:layout_marginTop="10dp"
    android:layout_height="110dp">

    <TextView
        android:id="@+id/coupon_head"
        android:text="@string/coupon_app"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:textColor="@color/first_text_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/coupon_type"
        android:textColor="@color/red_collection"
        android:text="@string/coupon_type"
        android:layout_below="@+id/coupon_head"
        android:textSize="12sp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/validity"
        android:text="有效期限制"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/third_text_color"
        android:layout_below="@+id/coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/coupon_value"
        android:text="10"
        android:textColor="@color/red_collection"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:textSize="30sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="￥"
        android:textColor="@color/red_collection"
        android:layout_alignTop="@+id/coupon_value"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@+id/coupon_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>