<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_content_bg"
    android:orientation="vertical">

    <include layout="@layout/common_top_bar" />

    <include layout="@layout/common_line" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:layout_marginTop="10dp"
        android:src="@color/separate" />

    <ExpandableListView
        android:id="@+id/id_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@null"
        android:childDivider="@color/separate"
        android:childIndicatorLeft="0dp"
        android:divider="@color/separate"
        android:dividerHeight="@dimen/list_divider"
        android:groupIndicator="@null"
        android:scrollbarAlwaysDrawHorizontalTrack="true"></ExpandableListView>

</LinearLayout>