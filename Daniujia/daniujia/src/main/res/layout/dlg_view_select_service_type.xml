<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="请选择服务方式"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/second_text_color"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_divider"
        android:src="@color/separate"/>

    <RelativeLayout
        android:id="@+id/txt_consult_container"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/txt_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/first_text_color"
            android:text="图文约谈"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/txt_consult_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/second_text_color"
            android:text="￥100/次"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_alignParentBottom="true"
            android:src="@color/separate"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/phone_consult_container"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/phone_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/first_text_color"
            android:text="电话约谈"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/phone_consult_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/second_text_color"
            android:text="￥10/分钟"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_alignParentBottom="true"
            android:src="@color/separate"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/offline_consult_container"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/offline_consult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/first_text_color"
            android:text="线下约谈"
            android:textSize="15sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/offline_consult_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/second_text_color"
            android:text="￥200/小时"
            android:layout_alignParentRight="true"
            android:textSize="15sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/common_content_bg"/>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        android:text="取  消"
        android:textColor="@color/blue_text"
        android:textSize="17sp" />
</LinearLayout>