<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="49dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp">

        <com.xiaojia.daniujia.ui.views.imageview.RoundedImageView
            android:id="@+id/id_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_avatar_default"
            app:riv_oval="true" />


        <TextView
            android:id="@+id/tv_item_collect_me"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/id_avatar"
            android:text="@string/name"
            android:textColor="#333333"
            android:textSize="@dimen/text_size_2" />

        <TextView
            android:id="@+id/tv_call_item_collect_me"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/tv_item_collect_me"
            android:background="@drawable/shape_rect_blue"
            android:gravity="center"
            android:text="@string/name_call"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_3" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="64dp"
            android:contentDescription="@string/app_name"
            android:src="@color/separate" />
    </RelativeLayout>


</LinearLayout>
