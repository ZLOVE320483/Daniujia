<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_common_grey_border"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_common_grey_border" >

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入图片上的字符"
            android:textColor="@color/second_text_color"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp" />

        <ImageView
            android:id="@+id/code"
            android:layout_width="94dp"
            android:layout_height="40dp"
            android:layout_below="@+id/tv_dialog_title"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/code"
            android:layout_below="@+id/tv_dialog_title"
            android:textColor="@color/blue_text"
            android:text="换一张"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="32dp" />

        <EditText
            android:id="@+id/et_code"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/code"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:hint="请输入图片上的字符"
            android:textColorHint="@color/third_text_color"
            android:textColor="@color/first_text_color"
            android:background="@drawable/shape_common_grey_border"
            android:paddingLeft="10dp"
            android:textSize="@dimen/text_size_3" />

        <ImageView
            android:id="@+id/id_divider_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"
            android:layout_below="@+id/et_code"
            android:layout_marginTop="12dp"
            android:contentDescription="@string/app_name"
            android:src="@color/separate" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/id_divider_1"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/id_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"
                android:gravity="center"
                android:layout_marginLeft="2dp"
                android:textColor="@color/third_text_color"
                android:textSize="@dimen/text_size_3" />

            <ImageView
                android:layout_width="@dimen/list_divider"
                android:layout_height="45dp"
                android:contentDescription="@string/app_name"
                android:src="@color/separate" />

            <TextView
                android:id="@+id/id_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/confirm"
                android:layout_marginRight="2dp"
                android:textColor="@color/blue_text"
                android:textSize="@dimen/text_size_3" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>