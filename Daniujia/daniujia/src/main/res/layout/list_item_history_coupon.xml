<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/coupon_bg_invalid">

    <TextView
        android:id="@+id/coupon_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="@string/coupon_app"
        android:textColor="@color/first_text_color"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/coupon_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_head"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:text="@string/coupon_type"
        android:textColor="@color/second_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/validity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_type"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/third_text_color" />

    <TextView
        android:id="@+id/coupon_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:text="10"
        android:textColor="@color/second_text_color"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/coupon_value"
        android:layout_centerVertical="true"
        android:text="ï¿¥"
        android:paddingTop="3dp"
        android:textSize="12sp"
        android:textColor="@color/second_text_color" />
</RelativeLayout>