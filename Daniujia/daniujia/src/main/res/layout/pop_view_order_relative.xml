<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/id_chat_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:drawablePadding="12dp"
        android:drawableRight="@drawable/chat_record"
        android:layout_above="@+id/id_person_intro"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:text="聊天记录"
        android:textColor="@color/second_text_color"
        android:textSize="12sp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/id_person_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="12dp"
        android:layout_above="@+id/id_my_ask"
        android:drawablePadding="12dp"
        android:drawableRight="@drawable/order_personal_profile"
        android:gravity="center_vertical"
        android:text="我的简介"
        android:textColor="@color/second_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/id_my_ask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:drawablePadding="12dp"
        android:layout_alignParentBottom="true"
        android:drawableRight="@drawable/my_question"
        android:gravity="center_vertical"
        android:layout_marginBottom="90dp"
        android:text="我的提问"
        android:textColor="@color/second_text_color"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/id_relative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="12dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/related_interviews" />
</RelativeLayout>