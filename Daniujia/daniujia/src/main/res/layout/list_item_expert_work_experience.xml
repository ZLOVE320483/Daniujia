<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/shape_rect_white_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/work_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014.06 - 2016.06"
                android:textSize="14sp"
                android:drawableLeft="@drawable/ic_clock"
                android:drawablePadding="8dp"
                android:textColor="@color/second_text_color"/>

            <TextView
                android:id="@+id/work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/work_duration"
                android:textColor="@color/blue_text"
                android:text="[2年]"
                android:layout_marginLeft="8dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/first_text_color"
                android:text="产品经理"
                android:textSize="14sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="1dp"
                android:layout_height="11dp"
                android:layout_marginLeft="10dp"
                android:src="@color/first_text_color" />

            <TextView
                android:id="@+id/id_corp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/first_text_color"
                android:textSize="14sp"
                android:text="上海晓家网络"
                android:singleLine="true"
                android:ellipsize="end"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/id_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="35dp"
            android:textColor="@color/second_text_color"
            android:text="@string/app_name"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>