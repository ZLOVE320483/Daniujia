<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/shape_rect_white_bg">

        <TextView
            android:id="@+id/dlg_knowledge_tip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/warm_prompt"
            android:textColor="@color/first_text_color"
            android:textSize="17sp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/dlg_knowledge_tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/knowledge_share_tip_title"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:textColor="@color/second_text_color"
            android:lineSpacingMultiplier="1.4"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp" />

        <View
            android:background="@color/separate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_divider"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dlg_knowledge_tip_no_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/third_text_color"
                android:text="暂不参与"/>

            <View
                android:background="@color/separate"
                android:layout_width="@dimen/list_divider"
                android:layout_height="match_parent"/>

            <TextView
                android:id="@+id/dlg_knowledge_tip_join"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/blue_text"
                android:text="现在就去"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>