    <style name="CustomCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox" >
        <item name="android:button">@drawable/ck_selector</item>
    </style>

    <style name="Translucent_NoTitle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>  <!-- 设置window背景透明，也就是去边框 -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Progress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle</item>
    </style>

    <style name="publish_require_text_view">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="publish_require_edit_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/first_text_color</item>
        <item name="android:textColorHint">@color/third_text_color</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/shape_common_no_border</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

</resources>
